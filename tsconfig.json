{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"],
      "#content": ["./.nuxt/content/index"],
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["types", "nuxt.config.ts", "**/*.ts", "**/*.vue", ".nuxt/**/*.ts"]
}
